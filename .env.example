# Database Configuration
# Para desarrollo local:
# MONGODB_URI=mongodb://localhost:27017/ecommerce
# Para Docker (admin independiente):
MONGODB_URI=mongodb://ecommerce-mongodb:27017/ecommerce
# Para Docker con autenticación:
# MONGODB_URI=mongodb://admin:password123@ecommerce-mongodb:27017/ecommerce?authSource=admin

# AWS S3 Configuration (opcional)
S3_ACCESS_KEY=your_s3_access_key
S3_SECRET_ACCESS_KEY=your_s3_secret_key

# Application Configuration
NODE_ENV=development
PORT=3000

# CORS Configuration (para permitir conexión del frontend)
CORS_ORIGIN=http://localhost:4000

# API Configuration
API_BASE_URL=http://localhost:3000/api
